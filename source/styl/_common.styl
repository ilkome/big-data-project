// ===============================================
//	#inputs
// ===============================================
input[type="text"]
input[type="password"]
input[type="email"]
input[type="phone"]
	width 300px
	margin-bottom 10px
	padding 20px 0px 15px 0px
	full()
	background none
	border none
	border-bottom 1px solid #5e112d
	box-shadow 0 1px 0 #a8002c
	anim()
	&:hover
		//border-color alpha(#5e112d, .8)
		//box-shadow 0 1px 0 alpha(#a8002c, .8)
	&:focus
		//border-color alpha(#fff, .6)
		//box-shadow 0 1px 0 alpha(#fff, .4)
	//&.error
	//&.valid
	&.full
		width 100%


// ===============================================
//	#input submit
// ===============================================
input[type="submit"]
	width auto
	padding 15px 60px
	border 2px solid #a8002c
	box-shadow 0 0 0 1px #5e112d
	background none
	cursor pointer
	anim()
	&:hover
		//background alpha(#a8002c, .4)
	&:active
		//opacity 0.8



// ===============================================
//	#textarea
// ===============================================
textarea
	width 238px
	max-width 100%
	height 100px
	margin-bottom 10px
	padding 20px 0px 15px 0
	full()
	background none
	border none
	border-bottom 1px solid #5e112d
	box-shadow 0 1px 0 #a8002c
	anim()
	&:hover
		//border-color alpha(#5e112d, .8)
		//box-shadow 0 1px 0 alpha(#a8002c, .8)
	&:focus
		//border-color alpha(#fff, .6)
		//box-shadow 0 1px 0 alpha(#fff, .4)
textarea.full
	width 100%



