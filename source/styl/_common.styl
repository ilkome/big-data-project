
// ===============================================
//	#vars
// ===============================================

color-white = #fff


// ===============================================
//	#fonts
// ===============================================
font-default = arial, sans-serif
font-site = 'SegoeWPSemilight', font-default
font-site-light = 'SegoeWPLight', font-default
font-site-bold = 'SegoeWPSemibold', font-default

font-main()
	font-size 14px
	color color-white
	font-family font-site

font-link()
	color #FFF
font-header()
	color #252728
	font-family font-site
	font-size 44px
	font-weight 300

font-form()
	color color-white
	font-size 19px
	font-family font-site
font-light()
	font-weight 300
font-regular()
	font-weight 500
font-bold()
	font-weight 700


// ===============================================
//	#reset
// ===============================================
*
	margin 0
	padding 0
	border 0
	outline 0



// ===============================================
//	#list
// ===============================================
ul
	margin 0 0 30px 5px
	li
		margin 0 0 10px 15px
		padding-left 20px
		list-style none
		background url("../img/li.png") 0 13px no-repeat
		ul, ol
			margin 15px 0 10px 0
ol
	margin 0 0 15px 0
	li
		margin 0 0 15px 15px
		list-style decimal inside
		ul, ol
			margin 15px 0 10px 0
.no-list-style 
	margin 0
	li
		margin-left 0
		list-style-type none



// ===============================================
//	#text
// ===============================================
p
	margin-bottom 20px



// ===============================================
//	#links
// ===============================================
a
	display inline-block
	padding-bottom 3px
	font-link()
	text-decoration none
	anim-all()
	//border-bottom 1px solid alpha(#FFF, .3)
	&:hover
		color #F16529
		border-color transparent
	&.active
		cursor default 
		tdn()
li.is-active a 
	cursor default
	tdn()



// ===============================================
//	#headers
// ===============================================
h1, h2, h3, h4, h5, h6
	margin 0 0 20px 0
	font-header()
h1
	font-size 40px
h2
	font-size 36px
h3
	font-size 28px
h4
	font-size 16px



// ===============================================
//	#forms
// ===============================================
label, input, button, select, textarea
	font-form()



